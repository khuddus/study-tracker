<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mak.studytracker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/khuddus"
        android:label="@string/app_name"
        android:roundIcon="@drawable/khuddus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

               <activity
            android:name=".activities.input.AddSubjectActivity"
            android:label="@string/title_activity_add_subject"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mak.studytracker.MainActivity" />
        </activity>
        <activity
            android:name=".activities.notifications.NotificationsActivity"
            android:label="@string/title_activity_notifications"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mak.studytracker.MainActivity" />
        </activity>
        <activity
            android:name=".activities.schedule.ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mak.studytracker.MainActivity" />
        </activity>
        <activity
            android:name=".activities.progress.ProgressActivity"
            android:label="@string/title_activity_progress"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mak.studytracker.MainActivity" />
        </activity>
    </application>

</manifest>